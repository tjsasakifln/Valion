# Configurações do ambiente
ENVIRONMENT=development
DEBUG=true

# Banco de dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=valion
DB_USER=valion_user
DB_PASSWORD=valion_password
DATABASE_URL=postgresql://valion_user:valion_password@localhost:5432/valion

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DEBUG=true

# Streamlit
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0
STREAMLIT_THEME=light

# Logging
LOG_LEVEL=INFO
LOG_FILE_HANDLER=true
LOG_CONSOLE_HANDLER=true
LOG_FILE=logs/valion.log

# Diretórios
UPLOAD_DIR=uploads
MODELS_DIR=models
REPORTS_DIR=reports
TEMP_DIR=temp
LOGS_DIR=logs
CLEANUP_DAYS=7

# Segurança
# ATENÇÃO: Altere esta chave em produção para um valor aleatório e seguro.
SECRET_KEY=your-super-secret-key-for-development-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Gerenciamento de Segredos (AWS Secrets Manager)
USE_SECRETS_MANAGER=false
SECRETS_MANAGER_REGION=us-east-1

# Modelo
MIN_SAMPLE_SIZE=30
TEST_SIZE=0.2
CV_FOLDS=5
MAX_FEATURES=20
RANDOM_STATE=42